<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <!-- Bootstrap CSS for styling -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" 
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" 
          crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <h1 class="my-4">URL Shortener</h1>

        <!-- Form for submitting the original URL -->
        <form action="/shortUrls" method="post" class="form-inline">
            <label for="fullUrl" class="sr-only">Original URL</label>
            <input 
                type="url" 
                name="fullUrl" 
                id="fullUrl" 
                class="col form-control mr-2" 
                placeholder="Original URL" 
                required 
            >
            <button type="submit" class="btn btn-success">Make it Shorter</button>
        </form>

        <!-- Table to display shortened URLs -->
        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th>Full URL</th>
                    <th>Short URL</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <!-- Loop through shortUrls array to display each shortened URL -->
                <% shortUrls.forEach(shortUrl => { %>
                    <tr>
                        <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
                        <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
                        <td><%= shortUrl.clicks %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

</body>
</html>
